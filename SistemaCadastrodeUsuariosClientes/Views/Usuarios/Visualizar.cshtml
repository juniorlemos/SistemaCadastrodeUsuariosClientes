@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}



    <script>

        function BtnClick() {

            $.ajax({
                url: "/Usuarios/Visualizar",
                method: "GET",

                success: function (data) {
                    console.log(data);

                    $("#nome").text(data['nomeCompleto']);

                    $("#apelido").text(data['apelido']);

                    $("#email").text(data['email']);

                    $("#telefone").text(data['telefoneDeContato']);
                },
                error: function (err) {
                    console.error(error)
                }


            })

        }

    </script>



